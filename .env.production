# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your production values

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@hostname:3306/dbname
# Example: mysql+pymysql://ideoshift_user:STRONG_PASSWORD@ideoshift-db.mysql.database.azure.com:3306/ideoshift_db

# Security Settings (CHANGE THESE!)
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Settings
CORS_ORIGINS=https://your-frontend-domain.azurewebsites.net,https://your-custom-domain.com

# SMTP Configuration for Password Reset
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@ideoshift.com
SMTP_FROM_NAME=Ideoshift

# Frontend URL (used in password reset emails)
FRONTEND_URL=https://your-frontend-domain.azurewebsites.net

# Application Settings
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# Azure Specific (Optional)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_APP_INSIGHTS_KEY=
